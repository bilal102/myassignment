extends ../layout 
block content
    h1 Edit Product
    form(action="/products/edit"+product._id,method="post")
        .form-group
            label(for="name") Name
            input#name(type="text" class="form-control", name="name", value=product.name)
        .form-group
            label(for="price") Total Budget
            input#price(type="text" class="form-control", name="price",value=product.price)
        .form-group
            label(for="members") Total Members
            input#members(type="text" class="form-control" name="members", value=product.members)
        .form-group
            label(for="country") Country
            input#country(type="text" class="form-control" name="country",value=product.country)        
            
        input(type="submit", value="Submit" class="btn btn-info")    
